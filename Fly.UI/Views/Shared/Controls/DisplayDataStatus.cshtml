@{
	DataStatus status = ParseModel<DataStatus>("Status");

	<div class="form-group">
		<label class="col-sm-3 control-label">状态</label>
		<div class="col-sm-5">
			<div class="checkbox">
				@if (status == DataStatus.Enabled)
				{
					<span class="label label-success">@status.ToDescription()</span>
				}
				else if (status == DataStatus.Disabled)
				{
					<span class="label label-danger">@status.ToDescription()</span>
				}
			</div>
		</div>
	</div>
}